<div class="text-center">
  <section class="container card p-3">
    <h2>{{title}}</h2>
    <p>{{content}}</p>
  <p id="blogID"> {{ id }}</p
    <p>Created by {{user.name}} on {{format_date date_created}}</p>
  </section>

  <div class="row">
    <h3>Create a comment:</h3>
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-cont">comment:</label>
        <input class="form-input" type="text" id="comment" name="comment-cont"/>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
</div>
{{#if logged_in}}
  {{#each comments as |comment|}}
<section class="flex-col justify-space-between card p-3">
    <h4>{{ comment.textcomment }} </h4>
    <div class="display-flex">
      <p> <strong> Posted By: </strong> {{ user.name }}</p>
      <p class="mx-2"> <strong> Date Posted: </strong> {{ format_date comment.date_posted }}</p>
    </div>
</section>
  {{/each}}
{{else}}
<a href="/login">You must login first to view the comments</a>
{{/if}}

<script src="../js/comment.js"></script>